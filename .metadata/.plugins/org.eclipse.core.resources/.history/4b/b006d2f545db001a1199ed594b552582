/*
 * Perla Huerta
 * 10/Agosto/2020
 * Leer N alturas y calcular la altura media.
 * Calcular cuántas hay superiores a la media y cuántas inferiores.
 */
package array;

import java.util.Scanner;

public class Ejercicio7 {
	public static void main(String[] args) {
		int longitud;
		double promedio;
		Scanner e = new Scanner(System.in);
		do {
			//Pedir número de alturas que serán ingresadas
			//Este número debe ser mayor a 0
			System.out.print("Número de alturas a introducir: ");
			longitud = e.nextInt();
		}while(longitud <= 0);
		
		//Se declara el arreglo
		double[] arreglo = new double[longitud];
		//Se ingresan las alturas por teclado
		for (int index = 0; index < arreglo.length; index++) {
			System.out.printf("Altura %d: ", index + 1);
			arreglo[index] = e.nextDouble();
		}
		
		int positivo = 0, negativo = 0, contPos = 0, contNeg = 0;
		
		
		
		
		//Se vuelve a recorrer el arreglo para contar los numeros positivos y negativos
		for (int index = 0; index < arreglo.length; index++) {
			if(arreglo[index] >= 0) {
				positivo += arreglo[index];
				contPos++;
			}
			else
			{
				negativo += arreglo[index];
				contNeg++;
			}
		}
		
		System.out.printf("Media de números positivos: %.2f\n", positivo / (contPos * 1.0));
		System.out.printf("Media de números negativos: %.2f\n", negativo / (contNeg * 1.0));
		e.close();
	}

}
