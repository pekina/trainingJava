/*
 * Perla Huerta
 * 5/Agosto/2020
 * Programa que lee por teclado el valor del radio de una circunferencia y calcula y 
 * muestra por pantalla la longitud y el área de la circunferencia. 
 * Longitud de la circunferencia = 2*PI*Radio, Area de la circunferencia = PI*Radio^2
 */
package basicosSecuenciales;
import java.util.Scanner;

public class Ejercicio6 {
	public static void main(String[] args) {
		double perimetro, area;
		Scanner e = new Scanner(System.in);
		System.out.print("Introduce el valor del radio: ");
		double r = e.nextDouble();
		e.close();
		perimetro = 2 * Math.PI * r;
		area = Math.PI * Math.pow(r, 2);
		System.out.println("El perímetro o longitud del círculo es: " + perimetro);
		System.out.println("El área del círculo es: " + area);
	}
}
