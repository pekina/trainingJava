package basicosSecuenciales;
import java.util.Scanner;

public class Ejercicio1 {
	public static void main(String[] args)
	{
		int i, j;
		
		/*//Ejercicio con Scanner
		Scanner entrada = new Scanner(System.in);
		
		System.out.print("Introduzca un número entero: ");
		i = entrada.nextInt();
		
		System.out.print("Introduzca otro número entero: ");
		j = entrada.nextInt();
		entrada.close();
*/
		
		//Ejercicio con JOptionPane
		i = Integer.parseInt(javax.swing.JOptionPane.showInputDialog("Introduce un número entero"));
		j = Integer.parseInt(javax.swing.JOptionPane.showInputDialog("Introduce otro número entero"));
		
		
		System.out.println("Se introdujeron los números " + i + " y " + j);
	}
}
