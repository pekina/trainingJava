/*
 * Perla Huerta
 * 6/Agosto/2020
 * Programa que lea tres números enteros H, M, S que contienen hora, minutos y segundos respectivamente,
 * y comprueba si la hora que indican es una hora válida.
 */
package basicosCondicional;
import java.util.Scanner;

public class Ejercicio9 {
	public static void main(String[] args)
	{
		Scanner e = new Scanner(System.in);
		int h, m, s;
		System.out.print("Introduzca la hora: ");
		h = e.nextInt();
		System.out.print("Introduzca los minutos: ");
		m = e.nextInt();
		System.out.print("Introduzca los segundos: ");
		s = e.nextInt();
		e.close();

		if(h >= 0 && h < 24 && m >= 0 && m < 60 && s >= 0 && s < 60)
			System.out.println(h + ":" + m + ":" + s + " es una hora válida.");
		else 
			System.out.println(h + ":" + m + ":" + s + " es una hora inválida.");
	}
}
