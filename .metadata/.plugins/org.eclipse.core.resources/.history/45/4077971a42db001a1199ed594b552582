/*
 * Perla Huerta
 * 10/Agosto/2020
 * Contar el número de elementos positivos, negativos y ceros en un array de 10 enteros.
 */
package array;

public class Ejercicio5 {
	public static void main(String[] args) {
		int[] arreglo = new int[10];
		int num;
		for(int i=0; i<arreglo.length; i++) {
			//Obtiene un número aleatorio entre -99 y 99, y solo guarda en el arreglo aquellos que sean pares
			num = (int)(Math.random() * 100 - (Math.random() * 100));
			arreglo[i] = num;
		}
		
		System.out.println("Los elementos del arreglo son: ");
		for(int a = 0; a<arreglo.length;a++)
		{
			System.out.printf("Elemento %d: %d\n", a+1, arreglo[a]);
		}
	}
}
