/*
 * Perla Huerta
 * 7/Agosto/2020
 * Leer un número N y calcular la suma de los factoriales de los números desde 0 hasta N.
 */
package buclesAnidados;
import java.util.Scanner;

public class Ejercicio3 {
	public static void main(String[] args) {
		Scanner e = new Scanner(System.in);
		int numero, factorial, suma = 0;
		do {
			System.out.print("Introduzca un número (mayor o igual que 0): ");
			numero = e.nextInt();
		}while(numero < 0);
		e.close();
		
		for (int contador = 0; contador <= numero; contador++)
		{
			factorial = 1;
			for (int cont2 = 1; cont2 <= contador; cont2++)
			{
				factorial *= cont2;
				System.out.println(contador + "! = " + factorial);
			}
			suma += factorial; 
		}
		System.out.println("La suma de los factoriales desde 0 hasta " + numero + " es: " + suma);
	}
}
