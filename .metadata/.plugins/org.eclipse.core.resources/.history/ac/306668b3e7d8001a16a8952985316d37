/*
 * Perla Huerta
 * 7/Agosto/2020
 * Pasar de binario a decimal
 */
package generales;
import java.util.Scanner;

public class Ejercicio10 {
	public static void main(String[] args)
	{
		Scanner e = new Scanner(System.in);
		int binario, decimal = 0, digito, exponente = 0;
		System.out.print("Introduzca un número binario: ");
		binario = e.nextInt();
		e.close();
		
		System.out.print("El número binario (" + binario + ") en decimal es: ");
		do {
			digito = binario%10;
			//Valida que sea número binario
			if (digito != 0 || digito != 1) {
				continue;
			}
			decimal += digito != 0 ? Math.pow(2, exponente) : 0;
			binario = binario/10;
			exponente++;
		}while(binario != 0);

		if(binario != 0)
			System.out.println("No es binario");
		else
			System.out.println(decimal);
	}
}
