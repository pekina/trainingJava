/*
 * Perla Huerta
 * 7/Agosto/2020
 * Leer un número N y calcular la suma de los factoriales de los números desde 0 hasta N.
 */
package buclesAnidados;
import java.util.Scanner;

public class Ejercicio3 {
	public static void main(String[] args) {
		Scanner e = new Scanner(System.in);
		int numero, factorial, suma = 0;
		System.out.print("Introduzca un número: ");
		numero = e.nextInt();
		e.close();
		
		for (int contador = 0; contador <= numero; contador++)
		{
			factorial = contador;
			for (int cont2 = contador-1; cont2 >= 1; cont2--)
			{
				factorial *= cont2;
			}
			suma += factorial; 
		}
		System.out.println("La suam de los factorial desde 0 hasta " + numero + " es: " + suma);
	}
}
